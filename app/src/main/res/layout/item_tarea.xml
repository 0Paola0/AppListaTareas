<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtNumeroTarea"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/imgEstado"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="Estado tarea"
        app:layout_constraintStart_toEndOf="@id/txtNumeroTarea"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@android:drawable/checkbox_off_background"/>

    <TextView
        android:id="@+id/txtNombreTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre de la tarea"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/imgEstado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEditar"
        android:layout_marginStart="12dp"/>

    <ImageButton
        android:id="@+id/btnEditar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Editar tarea"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:tint="#4CAF50"
        app:layout_constraintEnd_toStartOf="@id/btnEliminar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/btnEliminar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Eliminar tarea"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:tint="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 